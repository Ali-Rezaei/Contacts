<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include
        layout="@layout/display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.sample.android.padlayout.PadLayout
        android:id="@+id/padLayout"
        style="@style/PadLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        custom:equalSpacing="true"
        custom:numColumns="3"
        custom:numRows="4">

        <com.sample.android.contact.DialPadKey
            android:id="@+id/button1"
            style="@style/PadButtonStyle"
            custom:numberText="1" />

        <com.sample.android.contact.DialPadKey
            android:id="@+id/button2"
            style="@style/PadButtonStyle"
            custom:letterText="ABC"
            custom:numberText="2" />

        <com.sample.android.contact.DialPadKey
            android:id="@+id/button3"
            style="@style/PadButtonStyle"
            custom:letterText="DEF"
            custom:numberText="3" />

        <com.sample.android.contact.DialPadKey
            android:id="@+id/button4"
            style="@style/PadButtonStyle"
            custom:letterText="GHI"
            custom:numberText="4" />

        <com.sample.android.contact.DialPadKey
            android:id="@+id/button5"
            style="@style/PadButtonStyle"
            custom:letterText="JKL"
            custom:numberText="5" />

        <com.sample.android.contact.DialPadKey
            android:id="@+id/button6"
            style="@style/PadButtonStyle"
            custom:letterText="MNO"
            custom:numberText="6" />

        <com.sample.android.contact.DialPadKey
            android:id="@+id/button7"
            style="@style/PadButtonStyle"
            custom:letterText="PQRS"
            custom:numberText="7" />

        <com.sample.android.contact.DialPadKey
            android:id="@+id/button8"
            style="@style/PadButtonStyle"
            custom:letterText="TUV"
            custom:numberText="8" />

        <com.sample.android.contact.DialPadKey
            android:id="@+id/button9"
            style="@style/PadButtonStyle"
            custom:letterText="WXYZ"
            custom:numberText="9" />

        <com.sample.android.contact.DialPadKey
            android:id="@+id/button10"
            style="@style/PadButtonStyle"
            custom:numberText="*" />

        <com.sample.android.contact.DialPadKey
            android:id="@+id/button11"
            style="@style/PadButtonStyle"
            custom:letterText="+"
            custom:numberText="0" />

        <com.sample.android.contact.DialPadKey
            android:id="@+id/button12"
            style="@style/PadButtonStyle"
            custom:numberText="#" />

    </com.sample.android.padlayout.PadLayout>

    <ImageButton
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_marginBottom="64dp"
        android:background="@drawable/call_button_selector"
        android:elevation="5dp"
        android:src="@drawable/ic_call_white_24dp"
        tools:ignore="ContentDescription"
        tools:targetApi="lollipop" />

</LinearLayout>